<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_activity_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rebty.team2019.LoginActivity">

    <TextView
        android:id="@+id/activity_login_textView_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/activity_login_textView_welcome_text"
        android:textColor="@android:color/white"
        android:textSize="32sp" />

    <EditText
        android:id="@+id/activity_login_editText_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/activity_login_textView_welcome"
        android:layout_marginBottom="4dp"
        android:background="@android:color/white"
        android:hint="@string/activity_login_editText_login_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/activity_login_editText_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/activity_login_editText_login"
        android:layout_marginBottom="15dp"
        android:background="@android:color/white"
        android:hint="@string/activity_login_editText_password_hint"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/activity_login_button_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/activity_login_editText_password"
        android:layout_marginBottom="15dp"
        android:background="@drawable/activity_login_button_login_flat_selector"
        android:text="@string/activity_login_button_login_text"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/activity_login_button_forgetPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/activity_login_button_login"
        android:background="@drawable/activity_login_button_forgetpassword_flat_selector"
        android:text="@string/activity_login_button_forgetPassword_text"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/activity_login_textView_registrationInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_login_button_registration"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_login_textView_registrationInfo_text"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/activity_login_button_registration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/activity_login_button_registration_flat_selector"
        android:text="@string/activity_login_button_registration_text"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>
