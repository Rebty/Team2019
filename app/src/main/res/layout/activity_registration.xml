<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.rebty.team2019.RegistrationActivity">


        <EditText
            android:id="@+id/activity_registration_editText_surname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:hint="Фамилия" />

        <EditText
            android:id="@+id/activity_registration_editText_firstName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/activity_registration_editText_surname"
            android:layout_marginBottom="15dp"
            android:hint="Имя" />

        <EditText
            android:id="@+id/activity_registration_editText_eMail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/activity_registration_editText_firstName"
            android:layout_marginBottom="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/activity_registration_editText_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/activity_registration_editText_eMail"
            android:layout_marginBottom="15dp"
            android:hint="Пароль"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/activity_login_button_registration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/activity_login_button_registration_flat_selector"
            android:text="@string/activity_login_button_registration_text"
            android:textColor="@android:color/white"
            android:layout_below="@+id/activity_registration_editText_password"
            android:textSize="20sp" />

    </RelativeLayout>
</ScrollView>

